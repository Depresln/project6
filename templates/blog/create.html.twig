{% extends 'base.html.twig' %}

{% form_theme formTrick 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="container">
        {% if editMode %}
            <h2>Edit trick</h2>
        {% else %}
            <h2>Create trick</h2>
        {% endif %}

        {{ form_start(formTrick) }}

        {{ form_row(formTrick.title, {'attr': {'placeholder': "Trick name"}}) }}
        {{ form_row(formTrick.category) }}
        {{ form_row(formTrick.description, {'attr': {'placeholder': "Trick description"}}) }}

        <button type="submit" class="btn btn-success">
            {% if editMode %}
                Save edit
            {% else %}
                Send trick
            {% endif %}
        </button>

        {% if editMode %}
            <a href="{{ path('blog_delete', {'id': trick.id}) }}" onclick="return confirm('Voulez vous supprimer ce trick?');" class="btn btn-danger">Delete trick</a>
        {% endif %}

        {{ form_end(formTrick) }}

        {{ form_start(formMedia) }}
        {{ form_row(formMedia.content, {'attr': {'placeholder': "Put an image"}}) }}
        {{ form_end(formMedia) }}
    </div>
{% endblock %}
