{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <img src="{{ asset('img/snowboard.jpg') }}" alt="SnowboardImage" class="mx-auto d-block img-fluid img-banner">

    <div class="container">
        <h1 class="homeTitle text-center">ALL TRICKS</h1>

        <section class="articles">
            <div class="row">
                    {% for trick in tricks %}
                        <div class="col-3">
                            <article>
                                <div class="content">
                                    <a href="{{ path('blog_show', {'id': trick.id}) }}"><img src="http://placehold.it/350x150" alt="" class="img-fluid"></a>
                                    <div class="row">
                                        <div class="col-lg-8">
                                            <a href="{{ path('blog_show', {'id': trick.id}) }}"><h4>{{ trick.title }}</h4></a>
                                        </div>
                                        {% if app.user == trick.user or app.user and app.user.isAdmin == 1 %}
                                            <div class="col-lg-2">
                                                <a href="{{ path('blog_edit', {'id': trick.id}) }}"><i class="fa fa-pencil"></i></a>
                                            </div>
                                            <div class="col-lg-2">
                                                <a href="{{ path('blog_delete', {'id': trick.id}) }}" onclick="return confirm('Voulez vous supprimer ce trick?');"><i class="fa fa-trash"></i></a>
                                            </div>
                                        {% elseif app.user and app.user != trick.user %}
                                            <div class="col-lg-2">
                                                <a href="{{ path('blog_edit', {'id': trick.id}) }}"><i class="fa fa-pencil"></i></a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </article>
                        </div>
                    {% endfor %}
            </div>
        </section>
        <br />
    </div>
{% endblock %}
