{%  extends 'base.html.twig' %}

{%  block body %}
    <div class="container">
        <article>
            <h2>{{ trick.title }}</h2>
            <div class="metadata">Written the {{ trick.createdAt | date('d/m/Y') }} at {{ trick.createdAt | date('H:i') }} in the {{ trick.category.title }} category by {{ trick.user.username }}</div>
            <div class="content"><img src="http://placehold.it/350x150" alt="">
                <p>{{ trick.description | raw }}</p>
            </div>
            {% if app.user %}
                <a href="{{ path('blog_edit', {'id': trick.id}) }}" class="btn btn-success">Edit</a>
            {% else %}
                <h5>Log in to edit!</h5>
                <a href="{{ path('security_login') }}" class="btn btn-primary">Log in</a>
            {% endif %}
        </article>
        <br />

        <section id="comments">
            <h3>{{ trick.comments | length }} comments</h3>
            {% for comment in trick.comments %}
                <div class="comment">
                    <div class="row">
                        <div class="col-3">
                            <div class="row">
                                <div class="col-12 text-center">
                                    {{ comment.user.username }}
                                </div>
                                <div class="col-5 mx-auto d-block">
                                    <a href="{{ path('user_space', {'id': comment.user.id}) }}"><img src="{{ asset('img/' ~ comment.user.avatarImg) }}" alt="user avatar" class="img-fluid" width="100%"></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-9">
                            <div class="row">
                                <div class="col-12">
                                    <small>{{ comment.createdAt | date('d/m/Y') }} at {{ comment.createdAt | date('H:i') }}</small>
                                </div>
                                <div class="col-12">
                                    {{ comment.content | raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            {% endfor %}

            {% if app.user %}
            {{ form_start(commentForm) }}
            {{ form_row(commentForm.content, {'attr': {'placeholder': "Your comment"}}) }}

            <button type="submit" class="btn btn-success">Comment</button>
            {{ form_end(commentForm) }}

            {% else %}
                <h5>Log in to comment!</h5>
                <a href="{{ path('security_login') }}" class="btn btn-primary">Log in</a>
            {% endif %}
        </section>
    </div>
{%  endblock %}