{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Login</h2>

        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Email" required name="_username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required name="_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Log in</button>
            </div>
        </form>

        {#<a href="{{ path('reset_password') }}">Reset password</a>#}
    </div>
{% endblock %}